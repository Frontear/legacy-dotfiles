#!/bin/sh

DIRECTORY="/home/frontear/Documents/archive/backups/pacman/database"
FILENAME="database-$(date +"%F-%s").tar.bz2"

if [ ! -d "$DIRECTORY" ]; then
    echo "Directory does not exist, exiting..."
    exit 1
fi

tar -cjf $DIRECTORY/$FILENAME /var/lib/pacman/local &> /dev/null # Suppress output

if [ -f "$DIRECTORY/$FILENAME" ]; then
    exit 0
else
    exit 1
fi
